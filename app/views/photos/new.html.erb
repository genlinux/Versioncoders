<% content_for :head do %>
<%= GMap.header %>
<% end %>
<h2>Upload a new photo</h2>
<% form_for([@user,@photo],:html => { :multipart => true }) do |f| %>
<%= f.error_messages %>
<p>
    Select a photo to upload
</p>
<%= f.label :title %>
<br/>
<%= f.text_field :title %>
</p>
<p>
    <%= f.label :description %>
    <br/>
    <%= f.text_area :body, :rows => 6, :cols => 40 %>
</p>
<p>
    Latitude: <%= f.text_field 'geo_lat', :size => '8' %>
</p>
<p>
    Longitude: <%= f.text_field 'geo_long', :size => '8' %>
</p>
<p>
    Display Location Data? <%= f.check_box 'show_geo' %>
</p>
<p>
    Photo:
    <br/>
    <%= f.file_field 'uploaded_data' %>
</p>
<div id="gmap">
    <%= @map.to_html %>
    <%= @map.div(:width => 650, :height => 300) %>
</div>
<p>
    <%= f.submit "Upload Photo" %>or<%= link_to 'cancel', user_photos_path(@logged_in_user) %>
</p>
<% end %>
<%= link_to 'Back', user_photos_path(@logged_in_user) %>
