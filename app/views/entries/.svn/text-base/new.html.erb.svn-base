<h1>New Blog entry</h1>

<% form_for([@user,@entry]) do |f| %>
  <%= f.error_messages %>

<!--  <p>
    <%= f.label :user_id %><br />
    <%= f.text_field :user_id %>
  </p>-->
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title,:size=>40 -%>
  </p>
  <p>
    <%= f.label :blog_entry %><br />
    <%= f.text_area :body,:rows=>10,:cols=>60 -%>
  </p>
 <!-- <p>
    <%= f.label :comments_count %><br />
    <%= f.text_field :comments_count %>
  </p>-->
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', user_entries_path %>
