<h3> Comments</h3>
<div id="comments">
    <%=render :partial=>@entry.comments%>
</div>
<h3>Leave Comments</h3>
<%remote_form_for([@user,@entry,Comment.new]) do |f| %>
<%= f.error_messages %>
<p>
    <%= f.label :body %>
    <br/>
    <%= f.text_area :body ,:rows=>10,:cols=>60 -%>
</p>
<p>
    <%= f.submit "Create" %>
</p>
<% end %>
<%= link_to 'Leave comments',new_user_entry_comment_path(@user,@entry) %> | <%=link_to 'Back',user_entries_path %>
