<h2>Create article</h2>
<% form_for(@article) do |f| %>
<%= f.error_messages %>
<!-- <p>
<%= f.label :user_id %><br />
<%= f.text_field :user_id %>
</p>-->
<p>
    <%= f.label :title %>
    <br/>
    <%= f.text_field :title,:size=>60 %>
</p>
<p>
    <%= f.label :synopsis %>
    <br/>
    <%= f.text_area :synopsis,:rows=>4,:cols=>60 %>
</p>
<p>
    <%= f.label :body %>
    <br/>
    <%= f.text_area :body,:rows=>20,:cols=>60 %>
</p>

<p>
    <%= f.label :published? %>
    <br/>
    <%= f.check_box :published %>
</p>
<!--<p>
    <%= f.label :published_at %>
    <br/>
    <%= f.datetime_select :published_at %>
</p>-->
<p>
    <%= f.label :category_id %>
    <br/>
    <%= f.collection_select :category_id, Category.all, :id, :name,{:include_blank => 'Select Category',:prompt=>true} %>
</p>
</p>
<p>
    <%= f.submit "Save" %> or <%= link_to 'cancel', articles_path %>
</p>
<% end %>
<%= link_to 'Back', articles_path %>
